# Base Settings ======================
APP_NAME=pe-website
APP_ENV=local
APP_KEY=
APP_URL=https://peekeats.com
APP_DEBUG=true

# Localization Settings ======================
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US


# FRONTPAGE THEME ============================
# Set to 'default' for the standard frontpage, 'logs' for the logs-focused
# frontpage, or 'login' to show the sign-in page as the frontpage.
FRONTPAGE_THEME=default
#FRONTPAGE_THEME=whois
#FRONTPAGE_THEME=subdomains
#FRONTPAGE_THEME=cert                                                                                                                                                              
#FRONTPAGE_THEME=license
#FRONTPAGE_THEME=login
#FRONTPAGE_THEME=logs


# APPS Feature Configs ==============================
SHOP_ENABLED=false
API_LAB_ENABLED=true
#ADMIN_SERVER_ENABLED=true
ADMIN_EXTERNAL_LOGS_ENABLED=true



 # Maintenance Mode Settings ====================
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database 
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12
 
# Logging Settings ===========================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug


# Database Settings ==========================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1      # or your host
DB_PORT=3306
DB_DATABASE=xxx
DB_USERNAME=xxx
DB_PASSWORD=xxx

# Wordpress DB Variables ====================
WP_DB_HOST=your_wp_host
WP_DB_DATABASE=your_wp_database
WP_DB_USERNAME=your_wp_user
WP_DB_PASSWORD=your_wp_password
WP_DB_PREFIX=wp_


# Session Settings ============================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# Cache Settings ==============================
CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379


# Mail Settings ===============================
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

LOGIN_TWO_FACTOR_ENABLED=true

#PayPal Settings ==============================   
PAYPAL_CLIENT_ID=
PAYPAL_SECRET=
PAYPAL_ENVIRONMENT=sandbox
PAYPAL_CURRENCY=USD
PAYPAL_INTENT=CAPTURE


#Google OAuth Settings =======================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="${APP_URL}/auth/google/callback"

# META (Facebook) OAuth Settings==================
META_CLIENT_ID=
META_CLIENT_SECRET=
META_REDIRECT_URI="${APP_URL}/auth/meta/callback"
GOOGLE_OAUTH_ENABLED=true
META_OAUTH_ENABLED=false

VITE_APP_NAME="${APP_NAME}"

# Default model for AI clients. Override to another model as needed.
# Example: AI_DEFAULT_MODEL=claude-sonnet-4.5
AI_DEFAULT_MODEL=claude-sonnet-4.5

# WordPress DB connection (optional). If omitted, defaults to main DB with 'wp_' prefix.
WP_DB_DRIVER=mysql
WP_DB_URL=
WP_DB_HOST=127.0.0.1
WP_DB_PORT=3306
WP_DB_DATABASE=wordpress
WP_DB_USERNAME=root
WP_DB_PASSWORD=
WP_DB_SOCKET=
WP_DB_CHARSET=utf8mb4
WP_DB_COLLATION=utf8mb4_unicode_ci
WP_DB_PREFIX=wp_


# AWS S3 Settings =============================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Posts model: set an alternative post model class via .env if needed.
# Example: POSTS_MODEL=App\\Models\\WpPost
POSTS_MODEL=App\\Models\\WpPost

# Enable or disable the posts feature. Older setups might use `POST_ENABLED` (singular).
# Both are supported; `POST_ENABLED` takes precedence if set.
# Example: POSTS_ENABLED=false or POST_ENABLED=false
POST_ENABLED=true
POSTS_ENABLED=true

# Enable or disable the Games feature. Set to 'false' to hide the Games page and menu.
# Example: GAMES_ENABLED=false
GAMES_ENABLED=true

